rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- UTENTI (Profili e Account) ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Sottocollezione ACCOUNTS
      match /accounts/{accountId} {
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update, delete: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && (
          request.auth.uid == userId || 
          // Permetti lettura se l'email è nell'array semplice sharedWithEmails
          (resource.data.sharedWithEmails is list && 
           resource.data.sharedWithEmails.hasAny([request.auth.token.email]))
        );
      }
      
      // Sottocollezione CONTACTS
      match /contacts/{contactId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // --- INVITI ---
    // --- INVITI ---
    match /invites/{inviteId} {
      // 1. GET (Lettura puntuale): Permessa a tutti gli autenticati per check esistenza
      allow get: if request.auth != null;

      // 2. LIST (Query): Solo se sei mittente o destinatario
      allow list: if request.auth != null && (
        resource.data.senderId == request.auth.uid || 
        resource.data.recipientEmail == request.auth.token.email
      );

      // 3. CREATE: Solo se sei autenticato e ti dichiari come sender
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;

      // 4. UPDATE: Solo mittente o destinatario (es. per accettare/rifiutare)
      allow update: if request.auth != null && (
        resource.data.senderId == request.auth.uid || 
        resource.data.recipientEmail == request.auth.token.email
      );

      // 5. DELETE: Solo il mittente può revocare (cancellare)
      allow delete: if request.auth != null && resource.data.senderId == request.auth.uid;
    }
  }
}
