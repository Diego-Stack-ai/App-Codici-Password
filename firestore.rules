rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- UTENTI (Profilo e Sottocollezioni) ---
    // 1. Permesso sul documento utente stesso
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Permesso su TUTTE le sottocollezioni dell'utente (aziende, accounts, contacts, etc.)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 3. Regola speciale per la CONDIVISIONE di ACCOUNT tra utenti diversi
    match /users/{userId}/accounts/{accountId} {
      allow read: if request.auth != null && (
        resource.data.sharedWithEmails is list && 
        resource.data.sharedWithEmails.hasAny([request.auth.token.email])
      );
    }

    // --- INVITI ---
    // --- INVITI ---
    match /invites/{inviteId} {
      // 1. GET (Lettura puntuale): Permessa a tutti gli autenticati per check esistenza
      allow get: if request.auth != null;

      // 2. LIST (Query): Solo se sei mittente o destinatario
      allow list: if request.auth != null && (
        resource.data.senderId == request.auth.uid || 
        resource.data.recipientEmail == request.auth.token.email
      );

      // 3. CREATE: Solo se sei autenticato e ti dichiari come sender
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;

      // 4. UPDATE: Solo mittente o destinatario (es. per accettare/rifiutare)
      allow update: if request.auth != null && (
        resource.data.senderId == request.auth.uid || 
        resource.data.recipientEmail == request.auth.token.email
      );

      // 5. DELETE: Solo il mittente pu√≤ revocare (cancellare)
      allow delete: if request.auth != null && resource.data.senderId == request.auth.uid;
    }
  }
}
