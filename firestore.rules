rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // REGOLA 1: Dati Utente (Profilo, Aziende, Scadenze)
    // Solo il proprietario può leggere/scrivere i propri dati.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // REGOLA 2: Inviti
    // - Lettura: Consentita se sei il mittente O il destinatario.
    // - Scrittura: Consentita solo ad utenti autenticati.
    // (Qui si potrebbe restringere ulteriormente, ma "autenticato" è un ottimo primo step)
    match /invites/{inviteId} {
      allow read: if request.auth != null && (
        resource.data.ownerId == request.auth.uid || 
        resource.data.recipientEmail == request.auth.token.email
      );
      allow write: if request.auth != null;
    }

    // REGOLA 3: Tutto il resto è BLOCCATO 
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
