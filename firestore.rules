rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- UTENTI (Profilo e Sottocollezioni) ---
    // 1. Permesso sul documento utente stesso
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Permesso su TUTTE le sottocollezioni dell'utente (aziende, accounts, contacts, etc.)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 3. Regola speciale per la CONDIVISIONE di ACCOUNT (HARDENING V2)
    match /users/{userId}/accounts/{accountId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || (
          resource.data.sharedWithEmails is list && 
          resource.data.token_email in resource.data.sharedWithEmails &&
          exists(/databases/$(database)/documents/invites/$(accountId + "_" + request.auth.token.email.replace("[^a-zA-Z0-9]", "_"))) &&
          get(/databases/$(database)/documents/invites/$(accountId + "_" + request.auth.token.email.replace("[^a-zA-Z0-9]", "_"))).data.status == "accepted"
        )
      );
    }

    // --- INVITI (HARDENING V2) ---
    match /invites/{inviteId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null && (
        resource.data.senderId == request.auth.uid || 
        resource.data.recipientEmail == request.auth.token.email
      );
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow update: if request.auth != null && (
        resource.data.senderId == request.auth.uid || 
        resource.data.recipientEmail == request.auth.token.email
      );
      allow delete: if request.auth != null && resource.data.senderId == request.auth.uid;
    }
  }
}
